[ALIASES]
code   = --markdown
c-like = @code --comment-chars=/*,// --doxygen
markup = --eos-delimit --para-chars=,:;
man    = @markup --dot-ignore
python = --comment-chars=\"\",\#
script = @code --comment-chars=\#

[PATTERNS]
*.[chly]    = c-like
*.[chly]pp  = c-like
*.doxy      = c-like
*.go        = c-like
*.htm       = markup
*.html      = markup
*.java      = c-like
*.pl        = script
*.py        = python
*.sh        = script
*.[1-9]     = man

# vim:set et sw=2 ts=2:
