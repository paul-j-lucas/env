[user]
name = Paul J. Lucas
email = paul@lucasmail.org

[init]
defaultBranch = master

[pull]
rebase = false
quiet = true

[push]
default = simple

[alias]
b = branch
bn = branch-name
branch-name = rev-parse --abbrev-ref HEAD
changes = log --find-renames --follow --patch --stat --
co = checkout
comit = commit
commti = commit
comti = commit
d = diff
delete-remote-tag = "!f() { git push origin :refs/tags/$1; }; f"
ds = diff --staged
dsw = diff --staged -w
dw = diff -w
dws = dsw
fix = "!f() { git gc --prune=now; git remote prune origin; }; f"
last-tag = describe --tags --abbrev=0
log = log --follow
pick = cherry-pick --edit --no-commit -x
psuh = push
pub = publish
publish = push -u origin
rename = branch -m
sha = rev-parse HEAD
s = status
stat = status
top = rev-parse --show-toplevel
undo-commit = reset HEAD~
unpub = unpublish
unpublish = push origin --delete
who = "!f() { git blame $1 | cut -c15-36 | sort | uniq -c | sort -nr; }; f"

[include]
path = ~/.gitconfig-local

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	sslverify = false
