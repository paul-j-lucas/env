#! /bin/sh
##
#   Script:   untar -- untar a compressed tar file
#   Version:  1.1
#
#   Author:   Paul J. Lucas
##

ME=`basename $0`

##### Functions ###############################################################

error() {
  echo "$ME: $*"
  exit 65
}

untar() {
  case "$1" in
  *.tar)
    tar xf "$1"
    ;;
  *.tar.bz2|*.tbz2)
    tar xfj "$1"
    ;;
  *.tar.gz|*.tgz)
    tar xfz "$1"
    ;;
  *.tar.xz|*.txz)
    tar xfJ "$1"
    ;;
  *)
    error "$1: unknown filename extension"
    ;;
  esac
}

##### Main ####################################################################

for file in $*
do untar "$file"
done

# vim:set et sw=2 ts=2:
